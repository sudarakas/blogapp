<div class="container arlertmod">
      <div class="row">
            <div class="col-md-offset-2">
                  <% flash.each do |name, msg|%>
                        <div class='alert alert-<%="#{name}" %> '>
                        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)%>
                        </div>
                  <%end%>
            </div>
      </div>
</div>