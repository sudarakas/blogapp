<p id="notice"><%= notice %></p>

<h1 class="title">Blog Writters</h1>
<div class="float-right">
        <%= link_to 'Register Now', new_user_path , class: 'btn btn-dark' %>
</div>
<br>
<br>
<div> 
  <% @users.each do |user| %>
          <div class="row" style="margin-bottom: 10px;">
            <div class="col-md-12">
              <div class="card">
                <div class="card-body">
                  <img src="/user.png" class="rounded float-left img-fluid img">
                  <h2 class="card-title text-dark text-uppercase"><%= user.username %></h2>
                  <p class="card-text"><b>Email Address:</b> <%= user.email %></p>
                  <p class="card-text"><b>Registered on:</b> <%= user.created_at %>/p>
                  <br>
                  <div class="float-right">
                    <%= link_to 'Show', user, class: "btn btn-success" %>
                    <%= link_to 'Edit', edit_user_path(user), class: "btn btn-info" %>
                    <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
<br>
<br>
